<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <!-- 11. 부서정보 조회 -->
<mapper namespace="com.example.oBootMybatis01.EmpDeptMapper">
	<select id="tkListEmpDept" parameterType="EmpDept" resultType="EmpDept">
		SELECT e.empno, e.ename, e.job, e.deptno, d.loc
		FROM emp e, dept d
		WHERE e.deptno = d.deptno
		ORDER BY empno		
	</select>
	
	<!-- 4. getDeptName(controller) -->
	<select id="tkDeptName" parameterType="int" resultType="java.lang.String">
		select dname from dept where deptno = #{deptno}
	</select>
</mapper>